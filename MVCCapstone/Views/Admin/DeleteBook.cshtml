@model MVCCapstone.Models.DeleteBookModel
@{
    ViewBag.Title = "Delete Book";
}

<h2>Delete Book</h2>


<div class="row">
    <div class="col-sm-offset-1" id="deleteResult"></div>
</div>

<div class="row">
    @using (Ajax.BeginForm("deletePrompt", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "deleteResult" }, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.bookIdDelete, new {@class="col-sm-2 control-label" })
            <div class="col-sm-2">
                   @Html.TextBoxFor(m => m.bookIdDelete, new {placeholder = "Id of Book", @class = "form-control"})
            </div>
            <input type="submit" value="Delete" class="btn btn-default"/>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2">
                @Html.ValidationMessageFor(m => m.bookIdDelete)
            </div>
        </div>
    }
</div>

<br />

<h2>Search for Book Id</h2>
<div class="row">
    @using (Ajax.BeginForm("titleSearch", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "searchResult" }, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.bookSearch, new {@class="col-sm-2 control-label" })
            <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.bookSearch, new {placeholder = "Title of Book", @class = "form-control"})
            </div>
            <input type="submit" value="Search" class="btn btn-default"/>
        </div>
    }
</div>

<div class="row">
    <div id="searchResult"></div>
</div>




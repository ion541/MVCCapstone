@model MVCCapstone.Models.DisplayImageModel
@{
    ViewBag.Title = "Select Image";
}
@Html.Partial("Index")
<h2>Step 1: Select An Image</h2>
<br />
@Html.RouteLink("No Image", new {controller = "admin", action = "bookdetails"}, new {@class ="btn btn-primary"})
@Html.RouteLink("Upload Image", new {controller = "admin", action = "uploadimage"}, new {@class ="btn btn-success"})
<br /><br />
<div class="row-fluid">
    @foreach (MVCCapstone.Models.Image image in Model.images)
    {
        <div class="col-sm-3">
            @Html.Raw(@Html.ActionLink("[replacetext]", "bookdetails", new {imageid = @image.ImageId }).ToHtmlString().Replace("[replacetext]",  "<img style='max-height: 200px; max-width: 200px; margin:auto;margin-top:10px;' class='img-responsive thumbnail' src='" +    @Url.Content(@image.Path) + "' />"))
        </div>
    }
</div>


@model MVCCapstone.Models.DeleteBookSearchModel

@if (Model.bookResults.Count() == 0)
{
 <h3>There are no results that matches that title</h3>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th></th>
            <th>Book Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
        </tr>
        @foreach (MVCCapstone.Models.Book book in Model.bookResults)
         {
            <tr>
                <td class="text-center"><input data-id="@book.BookId" type="button" onclick="setBookId(this)" value="Set"/></td>
                <td id="@book.BookId">@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Publisher</td>
            </tr>
         }
    </table>
}

<script>
    function setBookId(target) {
        var idSelected = target.dataset['id'];

        $("#bookIdDelete").val(idSelected);
        $('html, body').animate({
            scrollTop: $("#capstone").offset().top
        }, 400);
        $("#bookIdDelete").focus();
    }
</script>
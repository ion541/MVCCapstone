
@model MVCCapstone.Models.NewPasswordModel

@{
    ViewBag.Title = "Set Password";
}

<h2>Set Password</h2>

<p>You are about to set a new password for: <b>@ViewBag.Account</b></p>

@using (Html.BeginForm("setnewpassword", "account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()


    <div class="form-group">

        @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-4">
                @Html.TextBoxFor(m => m.NewPassword, new {@class = "form-control" })  
        </div>
        <div class="col-sm-5">
                @Html.ValidationMessageFor(m => m.NewPassword)
        </div>
    </div>
    
    <div class="form-group">

        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-4">
                @Html.TextBoxFor(m => m.ConfirmPassword, new {@class = "form-control" })  
        </div>
        <div class="col-sm-5">
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label"></label>
        <div class="col-sm-8">
                <input class="btn btn-primary" type="submit" value="Set" style="min-width:100px;" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
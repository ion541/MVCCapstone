@model MVCCapstone.Models.SearchModel
@{
    List<string> errorMessages = ViewBag.ErrorMessages as List<string>;    
}

@if (errorMessages != null)
{
    if (errorMessages.Count() > 0)
    {
    <div class="row">
        <ul class="list-unstyled">
            <li class="info"><b>Warning:</b></li>
        @foreach (var error in ViewBag.ErrorMessages)
        {
            <li class="text-danger">@error</li>
        }  
        </ul>
    </div>
    }

}

@if (Model.books != null) {
    @:<table class="table table-hover table-condensed">
    if (Model.books.Count() > 0)
    {
        <tr>
            <th class="col-md-6">Title / Author</th>
        </tr>
        foreach (var book in Model.books)
        {
        <tr>
            <td><strong>@Html.RouteLink(book.Title, new { controller = "book", action="details", bookid = book.BookId })</strong> by @book.Author</td>
        </tr>   
        }
    }
    else
    {
        <tr>
            <td colspan="3">There are no books that matches your query</td>
        </tr>  
    }
    @:</table>
}
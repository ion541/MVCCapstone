@model MVCCapstone.Models.CreateThreadModel
@{
    ViewBag.Title = "Create Thread";
}

<h2>Create Thread - @Model.title</h2>

<div class="row">

@using (Html.BeginForm("createthread", "forum", new { bookid = Model.bookid }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

   <div class="form-group">

        @Html.LabelFor(m => m.threadTitle, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
             @Html.TextBoxFor(m => m.threadTitle, new { placeholder = "Title of Thread", @class = "form-control" })  
        </div>
       <div class="col-sm-2">
               @Html.ValidationMessageFor(m => m.threadTitle)
       </div>
    </div>
    
   <div class="form-group">

        @Html.LabelFor(m => m.post.content, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-8">
             @Html.TextAreaFor(m => m.post.content, new { placeholder = "Post...", rows = 3, columns = 40, @class = "form-control" })
        </div>
       <div class="col-sm-2">
              @Html.ValidationMessageFor(m => m.post.content)
       </div>
    </div>
    
    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-8">
              <input class="btn btn-primary" type="submit" value="Create Thread" />
        </div>
      
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

</div>
